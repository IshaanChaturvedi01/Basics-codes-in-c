#include<stdio.h>
int max(int num1, int num2, int num3)
{                                                               //&&-and
                                                                //||-or
    int result;                                                 //!=-not equals to
    if (num1>=num2 && num1>=num3){                              //!-negation operator
        result =num1;
    }
    else if(num2>=num1 && num2>=num3){
        result = num2;
    }
    else{
        result =num3;
    }
    return result;
}
    int main(){
        printf("%d",max(40,10,70));
        return 0;
    }
